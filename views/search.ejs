<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Keresés Idézetek Közt</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    h1 {
      text-align: center;
    }

    .quote {
      margin: 20px 0;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    form {
      text-align: center;
      margin-bottom: 20px;
    }

    input[type="text"] {
      padding: 8px;
      width: 300px;
      font-size: 16px;
    }

    input[type="submit"] {
      padding: 8px 16px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Idézetek Keresése</h1>

  <form method="GET" action="/search">
    <input type="text" name="text" placeholder="Keresett kifejezés" required>
    <input type="submit" value="Keresés">
  </form>

  <% if (message) { %>
    <p><%= message %></p>
  <% } else { %>
    <% quotes.forEach(quote => { %>
      <div class="quote">
        <p><strong><%= quote.quote %></strong></p>
        <p>- <%= quote.author %></p>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
